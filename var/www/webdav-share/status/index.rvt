<!DOCTYPE html>
<? ::rivet::headers set Cache-Control max-age=5 ?>
<html>
  <head>
    <link rel="stylesheet" href="/theme.css">
  </head>
  <body>
    <h1>Status</h1>

    <h2>Uptime</h2>
    <p><?= [exec uptime -p] ?></p>

    <h2>Disk space</h2>
    <pre><?= [exec df -h / /home/ /tank/shared/] ?></pre>

    <h2>Memory</h2>
    <pre><?= [exec free -m] ?></pre>
  </body>
</html>
